{
    "python.terminal.activateEnvironment": true,
    "python.defaultInterpreterPath": ".pixi/envs/default/bin/python",
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "jupyter.notebookFileRoot": "${workspaceFolder}",
    "r.rpath.linux": ".pixi/envs/default/bin/R",
    "r.rpath.mac": ".pixi/envs/default/bin/R",
    "r.rpath.windows": ".pixi\\envs\\default\\bin\\R.exe",
    "r.rterm.linux": "${workspaceFolder}/.pixi/envs/default/bin/R",
    "r.rterm.mac": "${workspaceFolder}/.pixi/envs/default/bin/R",
    "r.rterm.windows": "${workspaceFolder}\\.pixi\\envs\\default\\bin\\R.exe",
    "[r]": {
        "editor.defaultFormatter": "REditorSupport.r"
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/.dvc/cache/**": true,
        "**/.dvc/tmp/**": true,
        "**/.conda/**": true,
        "**/.pixi/**": true
    }
}
